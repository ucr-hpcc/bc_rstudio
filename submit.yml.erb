batch_connect:
  template: "basic"
  conn_params:
    - csrftoken

<%-
  extra_slurm_array = if extra_slurm.empty?
                        nil
                      else
                        extra_slurm.split(' ')
                      end

-%>

script:
  native:
    - "-c"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_mem %>GB"
    - "-p"
    - "<%= auto_queues %>"
    - "-t"
    - "<%= runtime %>"
    <%- unless extra_slurm_array.nil? -%>
    <%- extra_slurm_array.each do |arg| -%>
    - "<%= arg %>"
    <%- end -%>
    <%- end -%>
