batch_connect:
  template: "basic"
  conn_params:
    - csrftoken

script:
  native:
    - "-c"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_mem %>GB"
    - "-p"
    - "<%= auto_queues %>"
    - "-t"
    - "<%= runtime %>"
    <%- unless extra_slurm.empty? -%>
    - "<%= extra_slurm %>"
    <%- end -%>
